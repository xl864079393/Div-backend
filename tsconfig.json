{
    "compilerOptions": {
      "target": "es2016",  
      "module": "commonjs", 
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",                                 
      "paths": {
        "@/*": ["src/*"]
      },          
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true, 
      "skipLibCheck": true,
      "esModuleInterop": true
    }
}